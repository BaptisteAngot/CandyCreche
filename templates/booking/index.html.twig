{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <div class="imagedefond">
    <h1>Liste des vacances</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Commence le:</th>
                <th>Fini le:</th>
                <th>Vacances de:</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.beginAt ? booking.beginAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ booking.endAt ? booking.endAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ booking.title }}</td>
                <td>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}">Voir</a>
                    <a href="{{ path('booking_edit', {'id': booking.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de vacances actualisés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn-end-table" href="{{ path('booking_new') }}">Nouvel évènement</a>
        <div class="clear"></div>
    </div>
{% endblock %}
