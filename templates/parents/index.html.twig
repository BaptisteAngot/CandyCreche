{% extends 'base.html.twig' %}

{% block title %}Parents index{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Parents_name</th>
                <th>Parents_firstname</th>
                <th>Parents_mail</th>
                <th>Parents_created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parent in parents %}
            <tr>
                <td>{{ parent.parentsName }}</td>
                <td>{{ parent.parentsFirstname }}</td>
                <td>{{ parent.parentsMail }}</td>
                <td>{{ parent.parentsCreatedAt ? parent.parentsCreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('parents_show', {'id': parent.id}) }}">show</a>
                    <a href="{{ path('parents_edit', {'id': parent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
