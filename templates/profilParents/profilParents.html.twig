{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block header %}{% endblock %}
{% block body %}

    <div class="fond">
        <div class="image_nom">
            <div class="img_profil">
                <h2>Profil Parents</h2>
                <div class="add-child">
                    <a href="{{ path('child_index') }}">Ajouter Enfant</a>
                </div>
            </div>
        </div>

        <section id="info_Parents">
            <div class="div_info">
                <h2>Vos informations</h2>
                <p>Adresse mail: {{ parents.parentsMail }}</p>
                <p>Nom: {{ parents.parentsName }}</p>
                <p>Prénom: {{ parents.parentsFirstname }}</p>
                <div class="edit-profil">
                    <a href="{{ path('parents_edit') }}">&#9664; Modifier mon profil &#9654;</a>
                </div>
            </div>

            {% for enfant in enfants %}
                <div class="div_info">
                    <h2>Informations de l'enfant</h2>
                    <p>Nom: {{ enfant.childName }}</p>
                    <p>Prénom: {{ enfant.childFirstname }}</p>
                    <p>Âge: {{ enfant.childYears }}</p>

                    {% for maladie in enfant.diseases %}
                        <p>Maladie: {{ maladie.disease_name }}</p>
                        <div class="info_child">
                            <a href="{{ path('disease_edit', {'id': maladie.id}) }}">Modifier maladie</a>
                        </div>
                    {% endfor %}
                    <div class="info_child">
                        <a href="{{ path('disease_index', {'id': enfant.id}) }}">Ajouter Maladie</a>
                    </div>
                    {% for allergie in enfant.allergies %}
                        <p>Allergie: {{ allergie.allergy_name }}</p>
                    {% endfor %}
                    {% for equipment in enfant.equipment %}
                        <p>Equipement: {{ equipment.equipment_name }}</p>
                    {% endfor %}
                    <p>Info(s) complémentaire(s): {{ enfant.childOthers }}</p>
                    <div class="info_child">
                        <a href="{{ path('child_edit', {'id': enfant.id}) }}">Modifier Informations</a>
                    </div>
                </div>
            {% endfor %}
            <div class="clear"></div>
        </section>
    </div>

{% endblock %}