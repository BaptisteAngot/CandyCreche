{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block header %}{% endblock %}
{% block body %}
    <div class="fond">
        <section id="image_nom">
            <div class="img_profil"></div>
        </section>

        <section id="info_Parents">
            <div class="div_info">
                <h2>Vos informations</h2>
                <hr/>
                <p>Nom de la structure: {{ structure.getStructureName }} </p>
                <p>Description: {{ structure.getDescription }}</p>
                <p>Adresse mail: {{ structure.getStructureMail }}</p>
                <p>Numéro téléphone : {{ structure.getStructurePhone }}</p>
                <p>Nombre de place maximum : {{ structure.getStructureNbspace }}</p>
                <p>Type de nourriture: {{ structure.getStructureTypefood }}</p>
            </div>
            <div class="div_info">
                <h2>Localisation</h2>
                <hr/>
                <p>Ville : {{ structure.getStructureCity }}</p>
                <p>Code postal: {{ structure.getStructureZipcode }}</p>
                <p>Adresse: {{ structure.getStructureLocation }}</p>
            </div>
            <div class="clear"></div>
        </section>
    </div>
{% endblock %}